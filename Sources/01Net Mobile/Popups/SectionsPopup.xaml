			<localPhoneControls:TileButton Background="#FFBB0000" Source="/ZeroUnBusiness;component/Images/Icons/actuality.png" Width="140" Click="OnSectionClick" Tag="SectionType.Security"   Title="SÉCURITÉ" />
			<localPhoneControls:TileButton Background="#FF2299AA" Source="/ZeroUnBusiness;component/Images/Icons/actuality.png" Width="140" Click="OnSectionClick" Tag="SectionType.Products"   Title="PRODUITS" />
			<localPhoneControls:TileButton Background="#FF559933" Source="/ZeroUnBusiness;component/Images/Icons/actuality.png" Width="140" Click="OnSectionClick" Tag="SectionType.Service"    Title="SERVICE" />
			<localPhoneControls:TileButton Background="#FFD84182" Source="/ZeroUnBusiness;component/Images/Icons/bookmarks.png" Width="140" Click="OnSectionClick" Tag="SectionType.Bookmarks"  Title="MES FAVORIS" />
		</toolkit:WrapPanel>
	</Grid>
</controls:UserControl>
